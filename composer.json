{
    "name": "aedart/athenaeum",
    "type": "library",
    "description": "Athenaeum is collection of various library components that are built using several Laravel components",
    "keywords": [
        "Library",
        "Utilities",
        "Testing",
        "Overloading",
        "Magic Methods",
        "DTO",
        "Configuration"
    ],
    "homepage": "https://aedart.github.io/athenaeum/",
    "support": {
        "issues": "https://github.com/aedart/athenaeum/issues",
        "source": "https://github.com/aedart/athenaeum"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Alin Eugen Deac",
            "email": "aedart@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "fzaninotto/faker": "1.9.*",
        "guzzlehttp/guzzle": "~6.4",
        "illuminate/config": "^6.12",
        "illuminate/container": "^6.12",
        "illuminate/contracts": "^6.12",
        "illuminate/events": "^6.12",
        "illuminate/filesystem": "^6.12",
        "illuminate/support": "^6.12",
        "jean85/pretty-package-versions": "~1.2",
        "mockery/mockery": "1.3.*",
        "psr/log": "^1.1",
        "symfony/console": "4.4.*",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "ext-sockets": "*",
        "bamarni/composer-bin-plugin": "^1.3",
        "codeception/codeception": "3.1.*",
        "hanneskod/classtools": "~1.2",
        "orchestra/testbench": "^4.4",
        "predis/predis": "~1.1",
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "4.4.*",
        "symfony/yaml": "4.4.*",
        "twig/twig": "^2.11"
    },
    "autoload": {
        "files": [
            "packages/Core/helpers/paths.php",
            "packages/Support/helpers/properties.php"
        ],
        "psr-4": {
            "Aedart\\": "src",
            "Aedart\\Config\\": "packages/Config/src",
            "Aedart\\Container\\": "packages/Container/src",
            "Aedart\\Contracts\\": "packages/Contracts/src",
            "Aedart\\Core\\": "packages/Core/src",
            "Aedart\\Dto\\": "packages/Dto/src",
            "Aedart\\Events\\": "packages/Events/src",
            "Aedart\\Http\\Clients\\": "packages/Http/Clients/src",
            "Aedart\\Properties\\": "packages/Properties/src",
            "Aedart\\Service\\": "packages/Service/src",
            "Aedart\\Support\\": "packages/Support/src",
            "Aedart\\Testing\\": "packages/Testing/src",
            "Aedart\\Utils\\": "packages/Utils/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aedart\\Tests\\": "tests/"
        }
    },
    "replace": {
        "aedart/athenaeum-config": "self.version",
        "aedart/athenaeum-container": "self.version",
        "aedart/athenaeum-contracts": "self.version",
        "aedart/athenaeum-core": "self.version",
        "aedart/athenaeum-dto": "self.version",
        "aedart/athenaeum-events": "self.version",
        "aedart/athenaeum-http-clients": "self.version",
        "aedart/athenaeum-properties": "self.version",
        "aedart/athenaeum-service": "self.version",
        "aedart/athenaeum-support": "self.version",
        "aedart/athenaeum-testing": "self.version",
        "aedart/athenaeum-utils": "self.version"
    },
    "bin": [
        "athenaeum"
    ],
    "suggest": {
        "symfony/console": "Required for using various commands",
        "twig/twig": "Required for using aware-of generator",
        "orchestra/testbench": "Required for Laravel Testing utilities",
        "codeception/codeception": "Required for Testing utilities"
    },
    "scripts": {
        "post-install-cmd": [
            "@test-env",
            "@update-bin"
        ],
        "post-update-cmd": [
            "@update-bin"
        ],
        "test-env": [
            "@php -r \"file_exists('.testing') || copy('.testing.example', '.testing');\""
        ],
        "update-bin": [
            "@composer bin all update --ansi"
        ]
    },
    "scripts-descriptions": {
        "test-env": "Create .testing environment file, if it does not exist",
        "update-bin": "Updates all vendor-bin dependencies"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
