@import url('https://fonts.googleapis.com/css?family=Dosis:400,600|Roboto:400,400i,700|Source+Code+Pro:400,500i&display=swap');

body {
    font-family: 'Roboto', sans-serif;
    font-weight normal;
}

h1, h2, h3, h4, h5, h6 {
    font-family 'Dosis', sans-serif;
    font-weight bold;
    letter-spacing 0.2rem;
}

table {
    width: 99%
    display: table
}

.description {
    color: $primary
}

/* Navbar */
header.navbar {
    background-color desaturate(lighten($primary, 15%), 35%)
    border-bottom none
    box-shadow 0 2px 3px 1px darken($arrowBgColor, 75%)

    .site-name,
    .title,
    .links {
        background-color inherit
        color: lighten($textColor, 95%)
    }

    .search-box {
        input {
            width: 8rem
            border-radius 5px;
        }
        input:focus {
            border: 2px solid lighten($secondary, 10%)
        }

        .suggestions {
            width: 95%;

            .suggestion {
                a {
                    width: 100%;
                }

                // Display the path after each search result
                a::after {
                    content: "" attr(href) "";
                    display: block;
                    color: lighten($textColor, 65%)
                    background-color: #EDEDED;
                      font-style italic;
                    width: 100%;
                    padding: 2px;
                }

            }
        }
    }

    li.dropdown-item {
        a {
            color: $textColor
        }
    }
}

@media screen and (min-width: 950px) {
    header.navbar {
        .search-box {
            input {
                width: 25rem
            }
        }
    }
}

/* Sidebar */
.sidebar-group {
    p {
        line-height normal;
    }

    .is-sub-group {
        .sidebar-heading:not(.clickable) {
            opacity: 1 !important;
        }
    }
}

